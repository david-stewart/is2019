<?xml version="1.0" encoding="utf-8" ?>
<job maxFilesPerProcess="100" fileListSyntax="xrootd" simulateSubmission="false" >
	<command>
        echo star version: $STAR_VERSION
        root4star -l -q -b runTreeRoots.C\(-1,\"${FILELIST}\",\"${JOBID}\",\"bad_tower.list\",\"bad_run.list\",500004\)
        echo star version: $STAR_VERSION
	</command>
    <stdout URL="file:./sums/out/$JOBID" />	
    <stderr URL="file:./sums/err/$JOBID" />
    <output fromScratch="*.log"  toURL="file:/gpfs/mnt/gpfs01/star/pwg/dstewart/outroot/is2019/TreeRoots_SL18b/"/>
    <output fromScratch="*.root"  toURL="file:/gpfs/mnt/gpfs01/star/pwg/dstewart/outroot/is2019/TreeRoots_SL18b/"/>
    <output fromScratch="*.txt"  toURL="file:/gpfs/mnt/gpfs01/star/pwg/dstewart/outroot/is2019/TreeRoots_SL18b/"/>
	<input URL="catalog:star.bnl.gov?events!=0,library=SL18b,production=P16id,filetype~picoDst,collision=pAu200,sname2=st_physics||st_physics_adc,year=2015,available=1,storage!=hpss,sanity=1" nFiles="all" preferStorage="local"/>

	<SandBox installer="ZIP">
        <Package> 
            <File>file:./runTreeRoots.C</File>
			<File>file:./StRoot</File>
            <File>file:./.sl73_gcc485</File>
            <File>file:./bad_tower.list</File>
            <File>file:./bad_run.list</File>
		</Package>		
	</SandBox>
	
	<Generator>
        <Location>./sums/input/</Location>
        <ScriptLocation>./sums/input/</ScriptLocation>
        <ListLocation>./sums/input/</ListLocation>
	</Generator>
